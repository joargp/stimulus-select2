{
  "name": "stimulus-select2",
  "version": "1.0.0",
  "description": "Select2 integration for Stimulus (Hotwired)",
  "main": "dist/index.cjs",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "source": "src/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "author": "@joargp",
  "license": "MIT",
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "npm run clean && rollup -c",
    "dev": "npm run clean && rollup -cw",
    "test": "vitest run",
    "test:watch": "vitest",
    "demo": "npm run build && npx http-server . -c-1 -o /demo/"
  },
  "homepage": "https://github.com/joargp/stimulus-select2",
  "repository": {
    "type": "git",
    "url": "https://github.com/joargp/stimulus-select2.git"
  },
  "keywords": [
    "stimulus",
    "select2",
    "hotwired",
    "jquery"
  ],
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "@hotwired/stimulus": "^3.2.0",
    "jquery": "^3.7.1",
    "select2": ">=4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@hotwired/stimulus": "^3.2.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "jquery": "^3.7.1",
    "jsdom": "^24.0.0",
    "rollup": "^4.12.0",
    "rollup-plugin-filesize": "^10.0.0",
    "select2": "^4.1.0-rc.0",
    "vitest": "^4.0.16",
    "http-server": "^14.1.1"
  }
}
